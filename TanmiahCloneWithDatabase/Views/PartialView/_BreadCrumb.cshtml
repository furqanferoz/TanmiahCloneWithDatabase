@model System.Data.DataTable

@if (Model != null)
{
    for (int i = 0; i < Model.Rows.Count; i++)
    {

        <div class="breadcrumbs">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <ul class="breadcrumbs-list">
                            <li>
                                <a href="javascript:void(0)">@Model.Rows[i][1]</a>
                            </li>
                            <li>
                                <a href="javascript:void(0)">@Model.Rows[i][2]</a>
                            </li>
                            <li>
                                <a href="javascript:void(0)">
                                    @Model.Rows[i][3]
                                    <span style="position: absolute;right: 15px;top: 10px;">
                                        <a href="@Url.Action("Edit", "BreadCrumb", new {@id=Model.Rows[i][0]})" style="margin:0px; padding:0px; background:#ffff00; color:#337ab7">
                                            <img src="~/Content/Common/images/icons/pen.png" />
                                        </a>
                                    </span>


                                </a>

                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
}
