@using System.Web.Optimization;
@model TanmiahCloneWithDatabase.Models.BreadCrumbModel

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("Create", "BreadCrumb", FormMethod.Post, new { @id = "BreadCrumbForm", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
    <h3 class="container" style="padding-top:100px; padding-left:28px">Create a Bread Crumb</h3>
    <hr />
    <div class="form-horizontal container center" style="padding-top:25px">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            <div class="col-md-10 animated-label">
                @Html.EditorFor(model => model.MainLink, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control text-field",
                        data_val = "true",
                        id = "field-Main-Link",
                        maxlength = "50",
                        type = "text"
                    }
                })
                <label class="col-md-10" for="field-Main-Link"><b>Main Link</b></label>
                <span class="field-validation-valid" data-valmsg-for="MainLink" data-valmsg-replace="true"></span>
            </div>
            <span class="error-icon"></span>
        </div>

        <div class="form-group">
            <div class="col-md-10 animated-label">

                @Html.EditorFor(model => model.Link, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control text-field",
                        data_val = "true",
                        id = "field-Link",
                        maxlength = "50",
                        type = "text"
                    }
                })
                <label class="col-md-10" for="field-Link"><b>Link</b></label>
                <span class="field-validation-valid" data-valmsg-for="Link" data-valmsg-replace="true"></span>
                @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })

            </div>
            <span class="error-icon"></span>
        </div>


        <div class="form-group">
            <div class="col-md-10 animated-label">
                @Html.EditorFor(model => model.SubLink, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control text-field",
                        data_val = "true",
                        id = "field-Link",
                        maxlength = "50",
                        type = "text"
                    }
                })
                <label class="col-md-10" for="field-Link"><b>SubLink</b></label>
                <span class="field-validation-valid" data-valmsg-for="SubLink" data-valmsg-replace="true"></span>



            </div>
            <span class="error-icon"></span>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-primary" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/scripts/jquery.validate.js")
    @Scripts.Render("~/scripts/breadcrumb-script-custom-validator.js")
}
